<Window x:Class="WPFToDoListApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFToDoListApp"
        mc:Ignorable="d"
        Title="WFP To-do List Application" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        
        <Label Name="ApplicationName" Content="My To-do List" Grid.Row="0" FontWeight="Bold" Padding="10" FontSize="24" Background="#FF041C2C" Foreground="#FFFFFBDB"/>
        <ListBox Name="TaskListBox" Grid.Row="1" d:ItemsSource="{d:SampleData ItemCount=10}"/>
        <StackPanel Name="AddTask" Grid.Row="2" Orientation="Horizontal">
            <TextBox Name="TextBoxAdd" HorizontalAlignment="Left" TextWrapping="Wrap" Text="Type your task here." Width="680" GotFocus="TextBoxAdd_GotFocus"/>
            <Button Name ="ButtonAdd" Content="Add Task" HorizontalAlignment="Right" FontSize="16" FontWeight="Bold" Width="120" Click="ButtonAdd_Click" Background="#FF041C2C" Foreground="#FFFFFBDB"/>
        </StackPanel>
    </Grid>
</Window>